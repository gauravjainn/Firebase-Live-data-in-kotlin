<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.database.view.activity.MainActivity"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Firebase Insert Into Database"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#000"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_student_name"
        android:hint="Enter Student Name"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone_number"
        android:hint="Enter Student Phone Number"
        android:gravity="center"
        android:layout_below="@+id/et_student_name"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_below="@id/et_phone_number"
        android:text="Insert Data Into Firebase Database"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Firebase Delete From Database"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_delete_student_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_student_name"
        android:layout_marginTop="200dp"
        android:hint="Enter Student Name" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone_number"
        android:layout_marginTop="225dp"
        android:text="Delete Data From Firebase Database" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/menu_logout"
        android:layout_marginTop="420dp"
        android:gravity="center"
        android:textColor="@android:color/white" />

</RelativeLayout>